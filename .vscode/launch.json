{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Crawl",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/crawler.js",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["--enable-source-maps"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
